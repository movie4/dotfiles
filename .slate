# Configs
config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Monitor Aliases
alias imac5k 5120x2880
alias cinema30 2560x1440


# 2 Monitor layout
# layout 2monitors 'Google Chrome':REPEAT

# Default Layouts
default 2monitors resolutions:${imac5k};${cinema30}

bind 1:ctrl;alt;cmd;shift layout 2monitors